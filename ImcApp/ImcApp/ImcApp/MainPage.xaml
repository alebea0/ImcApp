<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImcApp.MainPage">

    <StackLayout>

        <Frame Margin="16" CornerRadius="0" BorderColor="LightGray"> 

        <StackLayout>

            <Label Text="Proporcione el peso de la persona en kilogramos:" FontSize="Medium"> </Label>
            <Entry FontSize="Medium"> </Entry>
            <Label Text="Proporcione la estatura de la persona en metros:"> </Label>
            <Entry FontSize="Medium"></Entry>
            
        </StackLayout>

        </Frame>

        <StackLayout Orientation="Horizontal" Padding="8" HorizontalOptions="CenterAndExpand">

            <Button Text="Calcular" FontSize="Medium" WidthRequest="130"></Button>
            <Button Text="Limpiar" FontSize="Medium" WidthRequest="130"></Button>

        </StackLayout>

        <Frame>

            <StackLayout>

                <Label Text="El índice de masa corporal de la persona es:" FontSize="Medium"> </Label>
                <Label Text="23.4567" HorizontalOptions="Center" FontSize="36"> </Label>
                <Label Text="La situación nutricional de la persona es:" FontSize="Medium"></Label>
                <Label Text="Peso normal" HorizontalOptions="Center" FontSize="36"></Label>
                
            </StackLayout>
            
        </Frame>
        
    </StackLayout>

</ContentPage>
